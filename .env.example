# .env
# API Keys
DEEPL_API_KEY=your-deepl-key-here
OPENAI_API_KEY=your-openai-key-here
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-credentials.json

# --- Core Settings ---
# Default languages if not specified in CLI or API
DEFAULT_SOURCE_LANGUAGE=fr
DEFAULT_TARGET_LANGUAGE=en

# --- Service Providers ---
# Choose translation provider: "openai" (default) or "deepl"
TRANSLATION_PROVIDER=openai

# Choose dictionary provider: "openai" (default, only option currently)
DICTIONARY_PROVIDER=openai

# Choose audio provider: "google" (default, only option currently)
# Requires GOOGLE_APPLICATION_CREDENTIALS to be set.
AUDIO_PROVIDER=google

# --- Storage Settings ---
# Choose where to store generated audio files: "local" (default) or "s3"
STORAGE_TYPE=local

# If STORAGE_TYPE=local, specify the directory path
STORAGE_PATH=./storage

# If STORAGE_TYPE=s3, specify bucket name and optionally region
# S3_BUCKET=your-s3-bucket-name
# S3_REGION=us-east-1 # Default if not set

# --- Google TTS Voices (JSON Format) ---
# Map language codes (like 'fr', 'de', 'es') to specific Google TTS voice names.
# Find voice names here: https://cloud.google.com/text-to-speech/docs/voices
# The adapter will use these based on the source_lang provided.
# IMPORTANT: Use double quotes for keys and values within the JSON string.
GOOGLE_TTS_VOICES={"fr": "fr-FR-Neural2-A", "de": "de-DE-Neural2-B", "es": "es-ES-Neural2-C", "en": "en-US-Standard-C"}
